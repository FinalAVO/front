<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<style>


.delete-top-box{
  background-color: #2F5971;
  background-image: url(../img/delete-bar.png);
  background-size: 100% 100%;
  width: 100%;
  height: 120px;
  position: relative;
  top: 100px;
}


#font {
  font-family: 'Pretendard'
}

.box1{
  margin: 0 auto;
  margin-top: 150px;
  align-items:center;
  width:600px;
  height: 400px;
  background-color: #ffffff;
  border:none;
  border-radius: 15px;
  align-items:center;
  text-align:center;
  box-shadow: 2px 0 5px #ccc
}

/* ------------- Login ------------- */


.loginBtn-wrap{
  width: 230px;
  height: 40px;
  border-radius: 50%;
  margin-left: 50px;
}

#loginBtn{
  width: 100%;
  height: 100%;
  font-size: 15px;
  margin-top: 0px;
  color: #fff;
  background-color: #d8d8d8;
  border: none;
  border-radius: 3px;
  outline: 0;
  cursor: pointer;
  transition: 0.3s ease;
}

#loginBtn:hover{
  background-color: #2F5971;

}

.email-input{
  width: 300px;
  height: 30px;
  border: 2px inset gray;
  border-radius: 20px;
  margin-left:10px;
  padding-left:10px;
}


</style>
<script>
$(function(){
  $('#loginBtn').click(function(){
    var password = $('#password').val();
      $.ajax({
        url: "/user/delete_user",
        type: "POST",
        dataType: "JSON",
        data: { "password": password }
      }).done(function(json){
        if(json == 0){
          $('#check_span').html("");
          $('#check_span').html("X 비밀번호가 일치하지 않습니다.");
          document.getElementById('check_span').style.color = "#FF0000";
        }else{
          $('#check_span').html("");
          alert('정상적으로 탈퇴되었습니다.');
          location.href="/"
        }
      }).fail(function (xhr, status, errorThrown){
        alert("오류가 발생했습니다. 잠시 후 다시 시도해주세요..");
      })
    })
  })
</script>
</head>


